# CORS Middleware
apiVersion: traefik.io/v1alpha1
kind: Middleware
metadata:
  name: cors-headers
  namespace: default
spec:
  headers:
    accessControlAllowOriginList:
      - "http://localhost:3000"
      - "https://techtorque.vercel.app"
      - "https://*.vercel.app"
    accessControlAllowMethods:
      - "GET"
      - "POST"
      - "PUT"
      - "DELETE"
      - "PATCH"
      - "OPTIONS"
    accessControlAllowHeaders:
      - "Accept"
      - "Authorization"
      - "Content-Type"
      - "X-CSRF-Token"
      - "X-Requested-With"
    accessControlExposeHeaders:
      - "Link"
    accessControlAllowCredentials: true
    accessControlMaxAge: 100

---
# HTTP to HTTPS Redirect Middleware
apiVersion: traefik.io/v1alpha1
kind: Middleware
metadata:
  name: redirect-to-https
  namespace: default
spec:
  redirectScheme:
    scheme: https
    permanent: true

---
# HTTP IngressRoute (redirects to HTTPS)
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: api-gateway-ingress
  namespace: default
spec:
  entryPoints:
    - web
  routes:
  - match: Host(`techtorque.randitha.net`)
    kind: Rule
    middlewares:
      - name: redirect-to-https
    services:
      - name: api-gateway-service
        port: 80

---
# HTTPS IngressRoute (uses Let's Encrypt certificate)
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: api-gateway-ingress-secure
  namespace: default
spec:
  entryPoints:
    - websecure
  routes:
  - match: Host(`techtorque.randitha.net`)
    kind: Rule
    middlewares:
      - name: cors-headers
    services:
      - name: api-gateway-service
        port: 80
  tls:
    secretName: techtorque-tls  # THIS IS THE KEY CHANGE - reference the certificate secret